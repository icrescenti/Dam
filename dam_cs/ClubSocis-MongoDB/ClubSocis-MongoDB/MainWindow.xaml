        <Button x:Name="btnEliminarCategoria" Content="Eliminar Categoria" HorizontalAlignment="Left" Margin="162,133,0,0" VerticalAlignment="Top" Width="115" Height="30" Click="btnEliminarCategoria_Click"/>
        <Button x:Name="btnModLlibre" Content="Modificacio Llibre" HorizontalAlignment="Left" Margin="28,98,0,0" VerticalAlignment="Top" Width="115" Height="30" Click="btnModLlibre_Click"/>
        <Button x:Name="btnEliminar" Content="Eliminar Llibre" HorizontalAlignment="Left" Margin="28,133,0,0" VerticalAlignment="Top" Width="115" Height="30" Click="btnEliminar_Click"/>

        <DataGrid x:Name="dataGridView1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,182,0,0"/>
        <Label x:Name="lblEstat" Content="" HorizontalAlignment="Left" Margin="162,28,0,0" VerticalAlignment="Top" Height="30" Width="219"/>
    </Grid>
</Window>
