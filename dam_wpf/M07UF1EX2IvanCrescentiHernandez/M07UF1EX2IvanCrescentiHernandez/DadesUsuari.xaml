<Window x:Name="dadesUsuari" x:Class="M07UF1EX2IvanCrescentiHernandez.DadesUsuari"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M07UF1EX2IvanCrescentiHernandez"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Usuaris" Height="400" Width="400" Loaded="dadesUsuari_Loaded">
    <Grid>
        <ListView x:Name="llistaUsuaris" SelectedIndex="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="auto" DisplayMemberBinding="{Binding Nom}" />
                    <GridViewColumn Header="Password" Width="auto" DisplayMemberBinding="{Binding Password}" />
                    <GridViewColumn Header="Email" Width="auto" DisplayMemberBinding="{Binding Email}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
