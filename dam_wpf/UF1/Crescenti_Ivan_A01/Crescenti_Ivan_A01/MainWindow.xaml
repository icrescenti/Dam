        <Label x:Name="lbl_desenvolupador" Content="Desenvolupador" HorizontalAlignment="Left" Margin="148,15,0,0" VerticalAlignment="Top" Width="112" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="lbl_any" Content="Any publicació" HorizontalAlignment="Left" Margin="286,15,0,0" VerticalAlignment="Top" Width="112" Height="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
